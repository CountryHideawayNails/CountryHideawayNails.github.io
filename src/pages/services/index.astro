---
import NavLayout from "../../layouts/NavLayout.astro";

import ServiceGroupLists from "../../components/dynamic/ServiceGroupLists";

import Cash from "../../assets/icons/Cash.astro";
import CashApp from "../../assets/icons/CashApp.astro";
import CreditCard from "../../assets/icons/CreditCard.astro";
import Venmo from "../../assets/icons/Venmo.astro";

import book_url from "../../data/bookings";
---

<NavLayout page_title="Services">
    <!-- * SERVICE PAGE TITLE * -->
    <div class="mx-16 my-8">
        <h1 class="text-xl sm:text-4xl lg:text-6xl">Available Products and Services</h1>
        <hr />
    </div>
    
    <!-- * SERVICE GROUPS * -->
    <div class="mx-16 flex gap-8 justify-around flex-wrap">
        <ServiceGroupLists client:load />
    </div>

    <!-- * CALL TO ACTION * -->
    <div class="mx-16 mt-32 flex items-center justify-center">
        <div class="flex flex-col items-center gap-2">
            <h1 class="text-2xl lg:text-3xl pb-2">Like What You See?</h1>
            <a href={book_url}>
                <button 
                    class={`
                        text-sm sm:text-lg cursor-pointer rounded-full px-4 py-2
                        bg-[#7a8153] hover:bg-[#85904c] text-white
                    `}
                >
                    Book Appointment
                </button>
            </a>

            <p>Now Accepting</p>
            <div class="flex gap-2">
                <Cash width={38} height={38} />

                <CreditCard width={38} height={38} />

                <CashApp width={38} height={38} />

                <Venmo width={38} height={38} />
            </div>
        </div>
    </div>
</NavLayout>