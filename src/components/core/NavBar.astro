---
import { Image } from "astro:assets";

interface NavLink {
    title: string;
    href: string;
};

const nav_links: NavLink[] = [
    {
        title: "Home",
        href: "/",
    }, {
        title: "Services",
        href: "/services",
    }, {
        title: "Book",
        href: "/book",
    },
];
---

<nav class="flex items-center justify-between px-16 sticky top-0 bg-gray-100 z-100">
    <!-- * Logo & Title * -->
    <div class="flex items-center">
        <Image
            src="https://placehold.co/10x10"
            class="size-16 mr-2"
            alt="Footer-Logo"
            width={10}
            height={10}
            loading="lazy"
        />
        <h1 class="text-xl">Country Hideaway Nails</h1>
    </div>
    <p>{Astro.url.pathname}</p>

    <!-- * Large-Screen Navigation Links * -->
    <div class="hidden sm:block">
        {nav_links.map((link: NavLink) => (
            <a
                href={link.href}
                class={`
                    mx-1
                    ${link.href === Astro.url.pathname ? "text-red-600" : ""}
                `}
            >
                {link.title}
            </a>
        ))}
    </div>
</nav>