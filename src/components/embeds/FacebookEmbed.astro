---
interface Props {
    embed_link: string;

    pixel_width: number;
    pixel_height: number;
};
---

<iframe
    src={
        "https://www.facebook.com/plugins/page.php?href=" +
        `${encodeURIComponent(Astro.props.embed_link)}&tabs=timeline&width=` +
        `${Astro.props.pixel_width}&height=${Astro.props.pixel_height}` + 
        "&small_header=false&adapt_container_width=false&hide_cover=false&" +
        "show_facepile=true"
    }
    width={Astro.props.pixel_width}
    height={Astro.props.pixel_height}
    allowfullscreen=""
    allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share"
/>