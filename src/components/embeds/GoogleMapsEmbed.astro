---
interface Props {
    id?: string;
    class?: string;
    style?: string | astroHTML.JSX.CSSProperties;

    embed_link: string;
};
---

<div id={Astro.props.id} class={Astro.props.class} style={Astro.props.style}>
    <iframe
        src={Astro.props.embed_link}
        title="Google-Maps-Embed"
        width="100%"
        height="100%"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
    ></iframe>
</div>